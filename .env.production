# Employee Management System - Production Environment Variables

# Database Configuration
POSTGRES_DB=employee_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=SecureProductionPassword123!

# JWT Configuration
JWT_SECRET=SuperSecureJWTSecretKeyForProductionEnvironmentThatIsAtLeast64CharactersLong!

# Spring Security Default User
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=SecureAdminPassword123!

# CORS Configuration
CORS_ORIGINS=http://localhost,https://localhost

# Logging Configuration
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_APP=INFO

# API Documentation (disabled in production)
SPRINGDOC_API_DOCS_ENABLED=false
SPRINGDOC_SWAGGER_UI_ENABLED=false

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# Monitoring Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# React App Configuration
REACT_APP_ENV=production
REACT_APP_API_URL=/api
